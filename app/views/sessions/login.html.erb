<% provide(:title, "Login") %>

<h1>Login</h1>
<p><%= @message ? @message : "" %></p>
<%= form_tag sessions_path do %>
    <p>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </p>

    <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </p>

    <%= submit_tag 'Log in' %>
<% end %>
